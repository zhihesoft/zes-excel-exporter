{
    "appenders": {
        "console": {
            "type": "console",
            "layout": {
                "type": "pattern",
                "pattern": "[%d] [%p] [%c %f{1}:%l:%o] %m"
            }
        },
        "common": {
            "type": "file",
            "filename": "logs/app.log",
            "flags": "w",
            "layout": {
                "type": "pattern",
                "pattern": "[%d] [%p] [%c %f{1}:%l:%o] %m"
            }
        },
        "errLog": {
            "type": "file",
            "filename": "logs/error.log",
            "layout": {
                "type": "pattern",
                "pattern": "[%d] [%p] [%c %f{1}:%l:%o] %m"
            }
        },
        "err": {
            "type": "logLevelFilter",
            "appender": "errLog",
            "level": "error"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "console",
                "common",
                "err"
            ],
            "level": "debug",
            "enableCallStack": true
        }
    }
}